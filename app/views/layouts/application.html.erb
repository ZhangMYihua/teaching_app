<!DOCTYPE html>
<html>
<head>
  <title>TeachingApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="current_user">
    <% if current_user %>
      <p>Signed is as <%= current_user.first_name %> </p>
      <p><%= link_to "Logout", session_path("current"), :method => :delete %></p>
    	<p><%= link_to 'Wanna Teach?', new_teaching_path %></p>
    <% else %>
    <div id='login_button'>
    <%= link_to "Login", new_session_path %>
    </div>
    or
    <div id='logout_button'>
    <%= link_to "Sign up", new_user_path %>
    </div>
    <% end %>

  </div>
<%= yield %>

</body>
</html>
