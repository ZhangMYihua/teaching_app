		<%= f.label(:education_bachelors, "Bachelor Degree") %> <br>
		<%= f.radio_button(:education, "Master Degree") %>
		<%= f.label(:education_masters, "Master Degree") %>
		<%= f.radio_button(:education, "PhD") %>
		<%= f.label(:education_phd, "PhD") %> <br>
		<%= f.radio_button(:education, "Other") %>
		<%= f.label(:education_other, "Other") %>
		</div>
  <div class="field">
  	<%= f.label :price_string, 'Hourly Rate' %>
  	<%= f.text_field :price_string %> 
  </div>
  <div class="field">
  	<%= f.label :about %>
  	<%= f.text_field :about %>
  </div>
  <div class="actions">
