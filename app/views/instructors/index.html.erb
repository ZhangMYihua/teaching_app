<div class="row">
	<div class="col-sm-10 col-sm-offset-1">
		<div class="page-header">
			<h1>Browse Teachers</h1>
		</div>
	</div>
</div>
<div class="row">
	<div class="col-sm-10 col-sm-offset-1">
		<%= render 'search' %>
	</div>
</div>
<br><br><br>

<div class="col-sm-10 col-sm-offset-1">
	<div class="row">
		<div class="col-sm-6">
			<%= link_to image_tag("english.jpg", :width =>"100%", :alt => "english"), {:class => "img-responsive", :alt => "Responsive image"} %>
		</div>
		<div class="col-sm-6">
			<%= link_to image_tag("french.jpg", :width =>"100%", :alt => "french"), {:class => "img-responsive", :alt => "Responsive image"} %>
		</div>
	</div>

	<div class="row">
		<div class="col-sm-6">
			<%= link_to image_tag("german.jpg", :width =>"100%", :alt => "german"), {:class => "img-responsive", :alt => "Responsive image"} %>
		</div>
		<div class="col-sm-6">
			<%= link_to image_tag("chinese.jpg", :width =>"100%", :alt => "chinese"), {:class => "img-responsive", :alt => "Responsive image"} %>
		</div>
	</div>
</div>


<br><br><br><br>
<div class="row">
	<div class="col-sm-10 col-sm-offset-1">
		<% @instructors.each do |instructor| %>
			<%= link_to instructor_path(instructor) do %>
			<div class="teacher col-md-4 col-sm-6 col-xs-12 col-lg-4 btn btn-default">
				<%=  (image_tag instructor.avatar_url(:index), width: AvatarUploader::THUMBW, height: AvatarUploader::THUMBH)  %>

				<h4>
					<%=  instructor.teacher.name.titleize %>
				</h4>
				<p class="text-info">
					From: <%= instructor.country_of_origin %> <br>
					Teaches: <%= instructor.subject_to_teach %> <br>
					Education level: <%= instructor.education %> <br>
					$<%= instructor.price %>
					<%= instructor.price_currency %>
				</p>
			</div>
			<%end %>
		<% end %>
	</div>
</div>
