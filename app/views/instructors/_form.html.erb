    <%= f.label :subject_to_teach %>
    <%= f.text_field :subject_to_teach %>
  </div>

  <div class="field">
    <%= f.label :education%>
    <%= select(:instructor, :education, options_for_select(['High School Diploma', 'Bachelors', 'Masters', 'P.hD', 'J.D.', 'M.D']), include_blank: true) %>
  </div>
  <div class="field">
  	<%= f.label :price_string, 'Hourly Rate' %>
  	<%= f.text_field :price_string %> 
  </div>
  <div class="field">
  	<%= f.label :about %>
  	<%= f.text_field :about %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
