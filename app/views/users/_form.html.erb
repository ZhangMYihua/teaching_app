<%= form_for @user, html: {class: 'form-horizontal'} do |f| %>
	<% if @user.errors.any? %>
	<div class="alert alert-danger">
		<h2>Darn it! </h2> <p><%= pluralize(@user.errors.count, "error") %> prevented this form from being saved:</p>
		<ul>
			<% @user.errors.full_messages.each do |message| %>
			<li><%= message %></li>
			<% end %>
		</ul>
	</div>
<% end %>

<div class="row">
<div class="col-sm-9 col-sm-offset-1">
  <div class="form-group">
	    <%= f.label :first_name, class: 'col-sm-2 control-label' %>
	    <div class="col-sm-10">
	    <%= f.text_field :first_name, class: 'form-control', placeholder: 'First Name'  %>
	    </div>
  </div>

  <div class="form-group">
    <%= f.label :last_name, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
	    <%= f.text_field :last_name, class: 'form-control', placeholder: 'Last Name'  %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :email, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
	    <%= f.text_field :email, class: 'form-control', placeholder: "Email"  %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :city_time_zone, "Time zone", class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
	    <%= f.time_zone_select :city_time_zone,  nil, {}, {:class => 'form-control'} %>
    	<span class="help-block">Please choose considerately. This is important for us to display bookings and availability in your local time.</span>
    </div>
  </div>	

  <div class="form-group">
    <%= f.label :password, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
	    <%= f.password_field :password, class: 'form-control', placeholder: "Password"  %>
    <span class="help-block">Password must be at least 6 characters long and is case sensitive.</span>
    </div>
  </div>  

  <div class="form-group">
    <%= f.label :password_confirmation, class: 'col-xs-2 control-label' %>
    <div class="col-sm-10">
	    <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "Password Confirmation" %>
    </div>
  </div>

  <div class="form-group">
	  <div class="col-sm-offset-2 col-xs-12 col-sm-4">
	  <button type="submit" name="commit" class="btn btn-lg btn-primary btn-block">Sign up</button>
		    <!-- <= f.submit %> -->
	  </div>
  </div>  
</div>
<% end %>
