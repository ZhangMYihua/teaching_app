<%= form_for @user, html: {class: 'form-horizontal'} do |f| %>
	<% if @user.errors.any? %>
	<div class="error_explanation">
		<h2>
			<%= pluralize(@user.errors.count, "error") %> prohibited this form from being saved:
		</h2>
		<ul>
			<% @user.errors.full_messages.each do |message| %>
			<li><%= message %></li>
			<% end %>
		</ul>
	</div>
<% end %>

<div class="row">
  <div class="field form-group">
	    <%= f.label :first_name, class: 'col-sm-2 control-label' %>
	  <div class="col-sm-4">
	    <%= f.text_field :first_name, class: 'form-control'  %>
	  </div>
  </div>
</div>

<div class="row">
  <div class="field form-group">
    <%= f.label :last_name, class: 'col-sm-2 control-label' %>
    <div class="col-sm-4">
	    <%= f.text_field :last_name, class: 'form-control'  %>
    </div>
  </div>
</div>

<div class="row">
  <div class="field form-group">
    <%= f.label :email, class: 'col-sm-2 control-label' %>
    <div class="col-sm-4">
	    <%= f.text_field :email, class: 'form-control'  %>
    </div>
  </div>
</div>

<div class="row">
  <div class="field form-group">
    <%= f.label :city_time_zone, class: 'col-sm-2 control-label' %>
    <div class="col-sm-4">
	    <%= f.time_zone_select :city_time_zone %>
    </div>
  </div>	
</div>
<div class="row">
  <div class="field form-group">
    <%= f.label :password, class: 'col-sm-2 control-label' %>
    <div class="col-sm-4">
	    <%= f.password_field :password, class: 'form-control'  %>
    </div>
  </div>  
</div>
<div class="row">
  <div class="field form-group">
    <%= f.label :password_confirmation, class: 'col-xs-2 control-label' %>
    <div class="col-sm-4">
	    <%= f.password_field :password_confirmation, class: 'form-control'  %>
    </div>
  </div>
</div>

<div class="row">
  <div class="action form-group">
    <div class="col-sm-2">
	    <%= f.submit %>
    </div>
  </div>
</div>
<% end %>